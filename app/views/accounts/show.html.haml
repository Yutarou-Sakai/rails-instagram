.container.profile{data: {id: @user.id}}
    .profile_name 
        %p= @user.username
    .profile_avatar 
        = image_tag @user.avatar_image, class: "avatar"
    .profile_follow 
        - if @user != current_user
            %p.btn-following.hidden Following
            %p.btn-follow.hidden Follow
    .profile_info 
        .profile_info_posts
            %p.profile_info_num= @post_count 
            %p.profile_info_text Posts
        .profile_info_followers
            %p.profile_info_num= @follower_count
            %p.profile_info_text Followers
        .profile_info_following
            %p.profile_info_num= @following_count
            %p.profile_info_text Followings
    .profile_contents
        .photos
            = image_tag "photo1.png"
            = image_tag "photo2.png"
            = image_tag "photo3.png"
            = image_tag "photo4.png"
            = image_tag "photo5.png"
            = image_tag "photo3.png"
            = image_tag "photo1.png"
            = image_tag "photo2.png"